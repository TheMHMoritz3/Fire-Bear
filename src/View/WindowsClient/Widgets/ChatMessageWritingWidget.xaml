<UserControl x:Class="WindowsClient.Widgets.ChatMessageWritingWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsClient.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <TextBox DockPanel.Dock="Left" x:Name="ChatTextBox" TextWrapping="Wrap" Text="" VerticalContentAlignment="Center" TextChanged="ChatTextBox_TextChanged" Margin="0,0,50,0" />
        <Button DockPanel.Dock="Right" x:Name="SendButton" Content="Send" HorizontalAlignment="Right" Width="50"/>

    </Grid>
</UserControl>
