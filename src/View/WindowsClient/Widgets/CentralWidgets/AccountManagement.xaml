<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsClient.Widgets.CentralWidgets"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Widgets="clr-namespace:WindowsClient.Widgets.Widgets" x:Class="WindowsClient.Widgets.CentralWidgets.AccountManagement"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
    <materialDesign:ColorZone VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <DockPanel>
            <Widgets:UserControlWidget VerticalAlignment="Stretch" DockPanel.Dock="Left"/>
            <Widgets:UserEdiWidget VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="8"/>
        </DockPanel>
    </materialDesign:ColorZone>
</UserControl>
