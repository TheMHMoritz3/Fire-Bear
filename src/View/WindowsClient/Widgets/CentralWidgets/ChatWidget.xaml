        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Style="{DynamicResource MaterialDesignToolBar}">
                <Button Command="Cut" ToolTip="Cut" ToolBar.OverflowMode="AsNeeded">
                </Button>
                <Button Command="Copy" ToolTip="Copy that stuff" ToolBar.OverflowMode="AsNeeded">
                </Button>
                <Separator />
                <Button Command="Paste" ToolTip="Paste some stuff" ToolBar.OverflowMode="AsNeeded">
                </Button>
                <Separator />
                <Label Content="Font size:" VerticalAlignment="Center"/>
                <ComboBox>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem IsSelected="True" Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="22"/>
                    <ComboBoxItem Content="24"/>
                    <ComboBoxItem Content="26"/>
                    <ComboBoxItem Content="28"/>
                </ComboBox>
                <Label Content="Font:" VerticalAlignment="Center"/>
                <ComboBox>
                    <ComboBoxItem Content="Arial"/>
                    <ComboBoxItem IsSelected="True" Content="Helvetica?"/>
                    <ComboBoxItem Content="Some Font"/>
                </ComboBox>
                <ListBox Grid.Column="1" Grid.Row="2" SelectionMode="Extended" Margin="0 8 0 0">
                    <ListBox.ToolTip>
                        <StackPanel>
                            <TextBlock Text="MaterialDesignToolToggleListBox" />
                            <TextBlock Text="Multiple selection" />
                            <TextBlock Text="ListBoxAssist.IsToggle allows more natural toggle behaviour" />
                        </StackPanel>
                    </ListBox.ToolTip>
                    <ListBoxItem>
                    </ListBoxItem>
                    <ListBoxItem>
                    </ListBoxItem>
                    <ListBoxItem x:Name="UnderlineCheckbox">
                    </ListBoxItem>
                </ListBox>
            </ToolBar>
        </ToolBarTray>
        <Widgets:UserControlWidget DockPanel.Dock="Left"/>
    </DockPanel>
