<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsClient"
        xmlns:Widgets="clr-namespace:WindowsClient.Widgets.Widgets" x:Class="WindowsClient.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="461" Width="849">
    <DockPanel>
        <Menu x:Name="MainMenu" HorizontalAlignment="Stretch" DockPanel.Dock="Top" >
            <MenuItem Header="File" >
                <MenuItem Header="Login" HorizontalAlignment="Right" Width="140" Click="MenuItem_LoginClick"/>
                <MenuItem Header="Logout" HorizontalAlignment="Right" Width="140"/>
                <Separator/>
                <MenuItem Header="Close" HorizontalAlignment="Right" Width="140" Click="MenuItem_CloseClick"/>
            </MenuItem>
        </Menu>
        <Widgets:MessageAndUserWidget HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0"/>
    </DockPanel>
</Window>
